  "https://github.com/coursier/coursier/releases/download/v${_version}/cs-x86_64-pc-linux.gz"
)
sha256sums=(
  "3a9904baba49af5f8fea96eb9fd31aa6779637eb5b177b500ad6ad16706a0f1b"
)

package() {
  install -D -m755 "${srcdir}/cs-x86_64-pc-linux" "${pkgdir}/usr/bin/cs"
}
