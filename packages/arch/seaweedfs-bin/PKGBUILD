pkgname=seaweedfs-bin
pkgver=3.13
pkgrel=1
pkgdesc="SeaweedFS is a fast distributed storage system for blobs, objects, files, and data lake, for billions of files"
arch=('x86_64')
url="https://github.com/chrislusf/seaweedfs"
license=('Apache 2.0')
source=(
  "https://github.com/chrislusf/seaweedfs/releases/download/${pkgver}/linux_amd64.tar.gz"
)
sha256sums=('fd69c2d78762302e88119a0dc4f05e598978a1b67999190ab7e006d4d0bd93da')

package() {
  install -D -m755 "${srcdir}/weed" "${pkgdir}/usr/bin/weed"
}
