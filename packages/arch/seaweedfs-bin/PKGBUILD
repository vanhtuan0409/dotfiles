pkgver=3.13
pkgrel=1
pkgdesc="SeaweedFS is a fast distributed storage system for blobs, objects, files, and data lake, for billions of files"
arch=('x86_64')
url="https://github.com/chrislusf/seaweedfs"
license=('Apache 2.0')
